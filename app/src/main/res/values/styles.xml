    <style name="Base.Theme.MyWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/my_main</item>
        <item name="colorOnPrimary">@color/my_green_700</item>
        <item name="colorPrimaryDark">@color/my_main_dark</item>
        <item name="colorOnSurface">@color/my_black</item>
        <item name="colorAccent">@color/my_green_700</item>
        <item name="colorSurface">@color/my_gray_50</item>
        <item name="colorSecondary">@color/my_green_700</item>
        <item name="android:colorBackground">@color/my_black</item>
